<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog - Cửa hàng</title>
    <link rel="stylesheet" href="/css/admin/revenue.css">
    <link rel="stylesheet" href="/css/headeradmin.css">
</head>
<body>
    <%- include('../partialsadmin/headeradmin') %>

    <main>
        <div class="content">
            <div class="sales-female">
                <h1>Doanh Số Bán Hàng</h1>
                <br>

                <!-- Form chọn ngày -->
                <form action="/revenue" method="GET">
                    <label for="startDate">Từ ngày:</label>
                    <input type="date" id="startDate" name="startDate">
                    <label for="endDate">Đến ngày:</label>
                    <input type="date" id="endDate" name="endDate">
                    <button type="submit">Lọc Doanh Số</button>
                </form>

                <h2>Tổng doanh số: <%= totalRevenue.toLocaleString('vi-VN') %> VNĐ</h2>
                <br>

                <h3>Chi tiết theo ngày:</h3>
                <table border="1">
                    <thead>
                        <tr>
                            <th>Ngày</th>
                            <th>Doanh số (VNĐ)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% dailyRevenue.forEach(row => { %>
                            <tr>
                                <td><%= new Date(row.date).toLocaleDateString('vi-VN') %></td>
                                <td><%= row.revenue.toLocaleString('vi-VN') %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>

                

            </div>
        </div>
    </main>

</body>
</html>
