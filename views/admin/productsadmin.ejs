<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog - Cửa hàng</title>
    
    <link rel="stylesheet" href="/css/headeradmin.css">
    <link rel="stylesheet" href="/css/admin/productsadmin.css">
</head>
<body>
    <%- include('../partialsadmin/headeradmin') %>




    <main>
        <div class="content">
            <div class="sales-female">
                <h2>Danh sách sản phẩm</h2>
                <a href="/admin/addProduct">Thêm sản phẩm</a>
                <table border="1">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Mô tả</th>
                            <th>Hình ảnh</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody id="productTable">
                        <% products.forEach(product => { %>
                            <tr>
                                <td><%= product.idSP %></td>
                                <td><%= product.name %></td>
                                <td><%= product.price %></td>
                                <td><%= product.description %></td>
                                <td><img src="<%= product.image %>" width="50"></td>
                                <td>
                                    <a href="/admin/productsadmin/edit/<%= product.idSP %>">Sửa</a>
                                    <a href="/admin/productsadmin/delete/<%= product.idSP %>" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
    
                
                <!-- Nút phân trang -->
                <div class="pagination">
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <a href="/admin/productsadmin?page=<%= i %>&limit=4"
                        class="<%= i === currentPage ? 'active' : '' %>">
                            <%= i %>
                        </a>
                    <% } %>
                </div>

            </div>
        </div>
    </main>
    
</body>
</html>